{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ]
    }
  ],
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/host",
        "destination": "/host.html"
      },
      {
        "source": "/join",
        "destination": "/join.html"
      },
      {
        "source": "/play",
        "destination": "/play.html"
      },
      {
        "source": "**",
        "function": "socketServer"
      }
    ]
  }
}
